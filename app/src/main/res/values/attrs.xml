<resources>

    <declare-styleable name="DialDisplay">
        <attr name="dialBackground" format="color" />
        <attr name="patternColor" format="color" />
        <attr name="digitsFont" format="string" />
        <attr name="digitsFontSize" format="dimension" />
        <attr name="dialType" format="enum">
            <enum name="speed" value="0"/>
            <enum name="rotation" value="1"/>
        </attr>
    </declare-styleable>

</resources>